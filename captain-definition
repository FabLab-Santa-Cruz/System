    "FROM oven/bun:1",
    "WORKDIR /usr/src/app",
    "RUN chown -R node:node .",
    "USER node",
    "COPY ./prisma ./prisma ",
    "COPY ./package*.json ./",
    "ARG DATABASE_URL",
    "ARG NEXTAUTH_SECRET",
    "ARG NEXTAUTH_URL",
    "RUN bun install",
    "RUN bun build",
    "COPY ./ ./",
    "EXPOSE 80",
    "CMD [ \"bun\", \"run\"  , \"start\"]"
